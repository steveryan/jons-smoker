<div class="container justify-center">
  <%= turbo_frame_tag :current_status, data: { controller: "controls" } do %>
    <div class="container p-6 my-8 bg-white border border-gray-200 shadow-md rounded-lg">
      <%= link_to edit_status_path, data: { turbo_frame: 'current_status' }, class: "block text-center text-lg font-semibold mb-2 cursor-pointer" do %>
        <p><strong>Status:</strong></p>
        <p>Actual: <span class="font-medium"><%= @current_led %></span></p>
        <p>Desired: <span class="font-medium"><%= @desired_led %></span></p>
      <% end %>
    </div>
  <% end %>

  <%= turbo_frame_tag :chart do %>
    <div class="container border border-gray-200 shadow-md rounded-lg p-6">
      <p class="flex justify-center text-center text-lg font-semibold mb-2"><strong>Temperature over Time:</strong></p>
      <p class="flex justify-center text-center text-lg font-semibold mb-2"><%= line_chart controls_chart_data_url, refresh: 10, points: false %></p>
    </div>
  <% end %>
